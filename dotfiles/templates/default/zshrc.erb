# Generated by Chef for <%= node[:fqdn] %>
# Local modifications will be overwritten.

# Autoload zsh modules when they are referenced
zmodload -a zsh/stat stat
zmodload -a zsh/zpty zpty
zmodload -a zsh/zprof zprof
zmodload -ap zsh/mapfile mapfile

HOSTNAME="`hostname`"
export PAGER='less -R'
export EDITOR='/usr/local/bin/mate -w -l 1'
export VISUAL='/usr/local/bin/mate -w -l 1'
export BROWSER='open -a /Applications/Google\ Chrome.app'
export GIT_EDITOR="/usr/local/bin/mate --name 'Git Commit Message' -w -l 1"

autoload colors zsh/terminfo
if [[ "$terminfo[colors]" -ge 8 ]]; then
  colors
fi

for color in RED GREEN YELLOW BLUE MAGENTA CYAN WHITE; do
  eval PR_$color='%{$terminfo[bold]$fg[${(L)color}]%}'
  eval PR_LIGHT_$color='%{$fg[${(L)color}]%}'
  (( count = $count + 1 ))
done
PR_NO_COLOR="%{$terminfo[sgr0]%}"

PS1="$PR_GREEN%n@%m%u: $PR_BLUE%2c$PR_WHITE> $PR_NO_COLOR"
LC_ALL='en_US.UTF-8'
LANG='en_US.UTF-8'
LC_CTYPE=C

zstyle ':completion:*' completer _complete _ignored _correct _approximate
zstyle ':completion:*' completions q
zstyle ':completion:*' max-errors 2

autoload -Uz compinit
compinit

HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
bindkey -e
bindkey "\e[3~" delete-char # Del

[[ $EMACS = t ]] && unsetopt zle

# Check the OS
case $(uname -s) in
  Linux)
      OS="linux"
  ;;
  Darwin)
      OS="osx"
  ;;
  *)
      OS="unknown"
  ;;
    
esac

if [ $OS = "linux" ]; then
  alias ls='ls --color'
else
  alias ls='ls -G'
fi

export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/sbin:$PATH
export PATH=/$HOME/.cabal/bin:$PATH

[[ -s "#{ENV['HOME']}/.rvm/scripts/rvm" ]] && . "#{ENV['HOME']}/.rvm/scripts/rvm" # Load RVM function
PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
PATH=$PATH:$HOME/.kindness/bin # Add kindness to PATH
