; Generated by Chef for <%= node[:fqdn] %>
; Local modifications will be overwritten.

(add-to-list 'load-path "~/.emacs.d/vendor")

; custom place to save customizations
(setq custom-file "~/.emacs.d/<%= ENV['USER'] %>/custom.el")
(when (file-exists-p custom-file) (load custom-file))

(when (file-exists-p ".passwords") (load ".passwords"))

; personal modules
<% node['emacs']['modules'].each do |emod| %>
(load "<%= ENV['USER'] %>/<%= emod.gsub(".el", "") %>")
<% end %>

(when (file-exists-p "<%= ENV['USER'] %>/private")
  (load "<%= ENV['USER'] %>/private"))

; vendor modules
<% node['emacs']['vendor'].each do |vmod| %>
(vendor '<%= vmod.gsub(".el", "") %>)
<% end %>
